<div class="columns is-centered">
  <div class="column is-one-third">
    <% if @game.status == 'proposal' && policy(@character).destroy? %>	
      <%= link_to "Delete this character", character_path(@character), 	
                        method: :delete,	
                        data: { 	
                          confirm: 	
                          "Are you sure you want to delete #{@character.name}?" 	
                        }, 	
                        class: "button is-black is-pulled-right is-small is-rounded" %>	
    <% end %>

    <h1 class="title is-5">Editing Level</h1>

    <%= render 'form', character: @character %>
    <%= link_to 'Cancel', game_path(@game), class:"is-pulled-right button is-black" %>
  </div>
</div>