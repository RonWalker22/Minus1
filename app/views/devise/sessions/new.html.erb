<%= render 'shared/form-box-start' %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :name, class:'label' %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input" %>
  </div>

  <div class="field">
    <%= f.label :password, class:'label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:'input' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class:"button is-link"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%= render 'shared/form-box-end' %>