<div class="columns is-centered">
  <div class="column is-two-thirds">
    <div class="box has-text-centered">
      <h1 class="title is-3">Log In</h1>
    </div>
  </div>
</div>
<div class="columns is-centered">
  <div class="column is-one-third">
    <div class="box has-text-centered">
      <h2 class="title is-4">Default Log In</h2>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="column is-one-third">
    <div class="box">
      <h2 class="title is-4 has-text-centered">Old School Log In</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class:'label' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "input", required: true %>
        </div>

        <div class="field">
          <%= f.label :password, class:'label' %><br />
          <%= f.password_field :password, autocomplete: "current-password",
          class:'input', required: true %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class:"button is-link"%>
        </div>
      <% end %>
    </div>
  </div>
</div>