<%= render 'shared/form-box-start' %>
<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class:"label" %>
    <%= form.text_field :name, autofocus: true, required: true, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :website, class:"label" %>
    <%= form.text_field :website, class:"input" %>
  </div>
 
  <div class="field">
    <%= form.label :image_id, class:"label" %>
    <%= form.text_field :image_id, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :igdb_id, class:"label" %>
    <%= form.text_field :igdb_id, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :status, class: 'label'%>
    <div class="select">
      <%= form.select :status, ['proposal', 'reviewing', 'supported'], class:
      'select'%>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class:"button is-link" %>
  </div>
<% end %>
<%= render 'shared/form-box-end' %>