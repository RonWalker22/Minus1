<%= form_with(model: loadout, local: true) do |form| %>
  <% if loadout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(loadout.errors.count, "error") %> prohibited this loadout from being saved:</h2>

      <ul>
      <% loadout.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= form.hidden_field :game_id, required: true, value: @game.id %>

  <div class="field">
    <%= form.label :kind, class:"label" %>
    <div class="select">
      <%= form.select :kind, Loadout::KIND_OPTIONS, 
                              { :include_blank => '-- Select One --' },
                              required: true, class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :name, class: 'label' %>
    <%= form.text_field :name, class: 'input' %>
  </div>

  <div class="actions">
    <%= form.submit class:"button is-link is-pulled-left" %>
  </div>
<% end %>
