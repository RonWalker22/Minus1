<p id="notice"><%= notice %></p>

<h1>Loadouts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Game</th>
      <th>Operator</th>
      <th>Kind</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loadouts.each do |loadout| %>
      <tr>
        <td><%= loadout.name %></td>
        <td><%= loadout.game %></td>
        <td><%= loadout.operator %></td>
        <td><%= loadout.kind %></td>
        <td><%= link_to 'Show', loadout %></td>
        <td><%= link_to 'Edit', edit_loadout_path(loadout) %></td>
        <td><%= link_to 'Destroy', loadout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Loadout', new_loadout_path %>
