
<div class="columns is-centered">
  <div class="column is-two-thirds">
    <div class="box">
      <%= link_to 'New Team', new_team_path %>
      <h1 class="title has-text-centered">Teams</h1>
      <table class="table is-fullwidth is-striped">
        <thead>
          <tr>
            <th><abbr title="Position">Pos</abbr></th>
            <th>Name</th>
            <th>Commander</th>
            <th>Members</th>
          </tr>
        </thead>

        <tbody>
          <% @teams.each_with_index do |team, i| %>
            <tr>
              <td><%= i + 1 %>.</td>
              <td><%= link_to team.name, team %></td>
              <td>
                <%= link_to team.commander.name, operator_path(team.commander) %>
              </td>
              <td><%= team.operators.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
